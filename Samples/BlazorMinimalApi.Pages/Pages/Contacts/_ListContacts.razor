@inherits XComponent<ListContacts>
@layout MainLayout

<PageTitle>Contacts</PageTitle>

<h1 class="mb-8 text-3xl font-bold">
	Contacts
</h1>
<div class="flex items-center justify-between mb-6">
	<div class="">
		<input type="text" class="relative px-6 py-3 w-full rounded shadow focus:shadow-outline border-none" name="ContactSearch" id="ContactSearch" placeholder="Search..." hx-get="/contacts/search" hx-target="#contact-list" hx-trigger="keyup delay:500ms changed" />
	</div>
	<a class="px-4 py-3 font-medium rounded bg-blue-500 hover:bg-blue-600 text-white transition" href="@Link.GetPathByName("CreateContact.Get")" preload>Add contact</a>
</div>

<div>
	<div id="contact-list">
		<_SearchContacts Model="Model" />
	</div>
</div>
